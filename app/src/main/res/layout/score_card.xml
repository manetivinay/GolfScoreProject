<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/indivdualCardRelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                tools:background="#8BC34A">

    <TextView
        android:id="@+id/holeEditText"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/plusImageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/plusImageView"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:textSize="24sp"
        android:textColor="#ffffff"
        tools:text="Hole 1"/>

    <ImageView
        android:id="@+id/plusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/add"/>


    <ImageView
        android:id="@+id/minusImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/plusImageView"
        android:src="@drawable/substract"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignTop="@+id/minusImageView"
        android:layout_alignBottom="@+id/minusImageView"
        android:layout_toLeftOf="@+id/minusImageView"
        android:layout_toRightOf="@+id/holeEditText"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:gravity="center"/>

</RelativeLayout>